# https://editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.pp]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.php]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[modules/nginx/files/nginx.conf]
indent_style = tab
indent_size = 4
