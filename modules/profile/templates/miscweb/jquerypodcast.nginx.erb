server {
  listen 443 ssl;
  listen [::]:443 ssl;

  ssl_certificate /etc/letsencrypt/live/miscweb/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/miscweb/privkey.pem;

  <%= @tls_config.join("\n  ") %>

  server_name  <%= @podcast_vhost %>;

  access_log    off;
  error_log     /var/log/nginx/error.log crit;

  server_tokens off;

  location / {
    root /srv/jquerypodcast/build_production;

    # Compatibility with http://feeds.feedburner.com/jQueryPodcastShowNotes
    rewrite ^/feed/?$ /feed/jQueryPodcastShowNotes.xml permanent;
  }

  location /.well-known/acme-challenge {
    root /var/www/letsencrypt/;
  }
}

